<table class="header">
    <tr>
        <td style="width: 50%;">
            <table>
                <tr><td><div class="logo-container"></div></td></tr>
                <tr><td class="small" style="white-space: pre-line">{{ report_info.alamat }}</td></tr>
                <tr><td class="small">Hp : {{ report_info.no_hp }}</td></tr>
                <tr><td class="small">Email : {{ report_info.email }}</td></tr>
            </table>
        </td>

        <td style="width: 50%;">
            {% if not title %}
                    <div class="title">Report</div>
                    <div class="sub-title">{{judul}}</div>
                    <table class="report-table">
                        <tr>
                            <td class="pr-50">Tanggal</td>
                            <td>{{ "now"|date("d/m/Y") }}</td>
                        </tr>
                        <tr>
                            <td class="pr-50">Laporan</td>
                            <td>{{judul}}</td>
                        </tr>

                        {% if periode %}
                            <tr>
                                <td class="pr-50">Periode</td>
                                <td>{{periode}}</td>
                            </tr>
                        {% endif %}

                        {% if additional %}
                            {% for ad in additional %}
                                <tr>
                                    <td class="pr-50">{{ad.label}}</td>
                                    <td>{{ad.value}}</td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                    </table>
            {% else %}
                <div class="title">{{judul}}</div>
                <table class="report-table">
                    <tr>
                        <td class="pr-50">Tanggal</td>
                        <td>{{ "now"|date("d/m/Y") }}</td>
                    </tr>
                    <tr>
                        <td class="pr-50">Nomor</td>
                        <td>{{nomor}}</td>
                    </tr>
                </table>
            {% endif %}
        </td>
            
    </tr>
</table>

<hr class="mb-20">