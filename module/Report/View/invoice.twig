<html>
    
    <head>
        {% include "/Report/View/partial/style.twig" %}
    </head>

    <body style="background-image:url({{background}})">
        
        <div class="container">
            {% include "Report/View/partial/header.twig" %}
            
            <div class="content">
                <table class="table-content">
                    <tr>
                        <th>No</th>
                        <th>Nama</th>
                        <th>Jumlah</th>
                        <th>Harga</th>
                        <th>Potongan</th>
                        <th>Total</th>
                    </tr>
                    {% for tagihan in tagihan.tagihan_detail %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ tagihan.nama }}</td>
                            <td>{{ tagihan.qty|number_format(0, ',', '.') }}</td>
                            <td>{{ tagihan.nominal|number_format(0, ',', '.') }}</td>
                            <td>{{ tagihan.potongan|number_format(0, ',', '.') }}</td>
                            <td>{{ tagihan.total|number_format(0, ',', '.') }}</td>
                        </tr>
                    {% endfor %}
                    <tr class="bold">
                        <td class="bg-transparent" colspan="4"></td>
                        <td class="bg-red">Total Tagihan</td>
                        <td class="bg-red">{{ tagihan.total|number_format(0, ',', '.') }}</td>
                    </tr>
                </table>
            </div>
        </div>
    </body>
</html>