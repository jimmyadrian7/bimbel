<html>
    
    <head>
        {% include "/Report/View/partial/style.twig" %}

        <style>
            header {
                position: fixed;
                top: 0px;
                left: 0;
                right: 0;
                height: 200px;
            }

            body {
                margin-top: 210px;
            }

            #background {
                background-image:url({{background}});
                display: block;
                position: fixed;
                top: 0;
                bottom: 0;
                left: 0;
                right: 0;
                z-index: -1000;
                background-repeat: repeat;
            }
        </style>
    </head>

    <body>
        
        <div id="background"></div>

        <div class="container">
            <header>
                <div class="container">
                    {% include "Report/View/partial/header.twig" %}
                </div>
            </header>
            
            <div class="content">
                <table class="table-content">
                    <thead>
                        <tr>
                            <th>Kode Tagihan</th>
                            <th>Nama Siswa</th>
                            <th>Guru</th>
                            <th>Tempat Kursus</th>
                            <th>Nama Barang</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    {% for tagihan_detail in tagihan_details %}
                        <tr>
                            <td>{{ tagihan_detail.tagihan.code }}</td>
                            <td>{{ tagihan_detail.tagihan.siswa.orang.nama }}</td>
                            <td>{{ tagihan_detail.tagihan.siswa.guru.orang.nama }}</td>
                            <td>{{ tagihan_detail.tagihan.siswa.kursus.nama }}</td>
                            <td>{{ tagihan_detail.nama }}</td>
                            <td>{{ tagihan_detail.total|number_format(0, ',', '.') }}</td>
                        </tr>
                    {% endfor %}

                    <tr class="bold">
                        <td class="bg-transparent" colspan="4"></td>
                        <td class="bg-red">Total Utang</td>
                        <td class="bg-red">{{ total_utang|number_format(0, ',', '.') }}</td>
                    </tr>
                </table>
            </div>
        </div>
    </body>
</html>