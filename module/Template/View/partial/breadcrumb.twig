<nav ng-controller="breadcrumbController as vm">
    <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">

        <li ng-repeat="bread in vm.breadcrumb track by $index" class="breadcrumb-item text-sm" ng-class="vm.isLastCss($index)">
            <a ng-if="!vm.isLast($index)" ng-click="vm.goState(bread)" class="opacity-5 text-dark" href="javascript:;" ng-bind="bread"></a>
            <span ng-if="vm.isLast($index)" ng-bind="bread"></span>
    </ol>
</nav>