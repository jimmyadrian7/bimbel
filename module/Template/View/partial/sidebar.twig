<aside 
    ng-controller="SidebarController as vm"
    class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3">

    <div class="sidenav-header">
        <i class="fas fa-times p-3 cursor-pointer text-secondary opacity-5 position-absolute end-0 top-0 d-none d-xl-none"></i>
        <a class="navbar-brand m-0" href="javascript:void(0)">
            <img src="{{base_url}}/public/images/logo_2.png" class="navbar-brand-img h-100" alt="main_logo">
            <span class="ms-1 font-weight-bold" ng-bind="vm.title"></span>
        </a>
    </div>

    <hr class="horizontal dark mt-0">

    <div class="collapse navbar-collapse w-auto">
        <ul class="navbar-nav">
            <li class="nav-item" ng-repeat="nav in vm.navRoutes">
                {% verbatim %}
                    <a class="nav-link" ng-class="vm.isCurrent(nav)" href="javascript:void(0)" ng-click="vm.go(nav)">
                        <span class="nav-link-text ms-1" ng-bind="nav.nama"></span>
                    </a>
                {% endverbatim %}
            </li>
        </ul>
    </div>

    <div class="sidenav-footer mx-3">
        <button class="btn bg-gradient-primary mt-3 w-100" ng-click="vm.logout()">Logout</button>
    </div>
</aside>